<div class="card">
  <h3>Spoken English AI</h3>
  <small id="status">Listeningâ€¦ speak freely</small>
  <div class="mic">ðŸŽ¤</div>
  <pre id="output">Waiting for speechâ€¦</pre>
</div>

<script>
const API = "https://YOUR-WORKER-NAME.workers.dev";

const SR = window.SpeechRecognition || window.webkitSpeechRecognition;
const rec = new SR();

rec.continuous = true;
rec.interimResults = false;
rec.lang = "en-US";

let buffer = "";
let lastSend = Date.now();
let speaking = false;

rec.onresult = async e => {
  const text = e.results[e.results.length - 1][0].transcript.trim();
  buffer += " " + text;

  if (Date.now() - lastSend > 8000) {
    lastSend = Date.now();
    const sendText = buffer;
    buffer = "";

    document.getElementById("status").textContent = "Thinkingâ€¦";

    const res = await fetch(API,{
      method:"POST",
      headers:{ "Content-Type":"application/json" },
      body:JSON.stringify({ text: sendText })
    });

    const data = await res.json();
    speak(data.reply);
    document.getElementById("output").textContent = data.reply;
  }
};

function speak(text){
  speechSynthesis.cancel();
  const u = new SpeechSynthesisUtterance(text);
  u.rate = 0.95;
  u.onstart = ()=>{ speaking=true; rec.stop(); };
  u.onend = ()=>{ speaking=false; rec.start(); };
  speechSynthesis.speak(u);
}

rec.onerror = e => {
  document.getElementById("status").textContent = "Mic error";
};

rec.start();
</script>
