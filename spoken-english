<script>
const API_URL = "https://late-mouse-4aa2.zelvora-global.workers.dev";

const SR = window.SpeechRecognition || window.webkitSpeechRecognition;
let rec, listening=false;
let memory = JSON.parse(sessionStorage.getItem("zelvoraMemory") || "[]");
const LIMIT = 10;

function toggle(){ listening ? stop() : start(); }

function start(){
  if(!SR || listening) return;
  rec = new SR();
  rec.lang="en-US";
  rec.interimResults=false;
  rec.continuous=false;

  rec.onstart=()=>{
    listening=true;
    mic.classList.add("active");
    status("Listeningâ€¦");
  };

  rec.onresult=e=>{
    const text=e.results[0][0].transcript;
    add("user",text);
    send(text);
  };

  rec.onend=()=>{ listening=false; mic.classList.remove("active"); };
  rec.start();
}

function stop(){
  listening=false;
  if(rec) rec.stop();
  mic.classList.remove("active");
  status("Stopped");
}

async function send(text){
  memory.push({role:"user",content:text});
  memory=memory.slice(-LIMIT);
  sessionStorage.setItem("zelvoraMemory",JSON.stringify(memory));

  status("Thinkingâ€¦");

  try{
    const r=await fetch(API_URL,{
      method:"POST",
      headers:{"Content-Type":"application/json"},
      body:JSON.stringify({text,history:memory})
    });
    const d=await r.json();
    add("ai",d.reply);
    speak(d.reply);

    memory.push({role:"assistant",content:d.reply});
    memory=memory.slice(-LIMIT);
    sessionStorage.setItem("zelvoraMemory",JSON.stringify(memory));
  }catch{
    add("ai","Temporary issue. Please continue.");
  }
}

function speak(t){
  speechSynthesis.cancel();
  const u=new SpeechSynthesisUtterance(t);
  u.rate=.9;
  u.onend=()=>status("Your turn");
  speechSynthesis.speak(u);
}

function add(type,text){
  const div=document.createElement("div");
  div.className="msg "+type;
  div.innerHTML=`<div class="label">${type==="user"?"You":"Tutor"}</div>${text}`;
  chat.appendChild(div);
  chat.scrollTop=chat.scrollHeight;
}

function clearChat(){
  memory=[];
  sessionStorage.removeItem("zelvoraMemory");
  chat.innerHTML=`<div class="msg ai"><div class="label">Tutor</div>New conversation started.</div>`;
}

function status(t){ document.getElementById("status").textContent=t; }
</script>
